<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ItemDetailPage"
             xmlns:local="clr-namespace:App1.ViewModels"  
             Title="{Binding Title}">

    <StackLayout x:DataType="local:ProductDetailViewModel" Spacing="20" Padding="15">
        <Label Text="Название" FontSize="Medium" />
        <Label Text="{Binding Name}" FontSize="Small"/>
        <Label Text="Описание" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Цена" FontSize="Medium" />
        <Label Text="{Binding Price}" FontSize="Small"/>
        <Label Text="Категория" FontSize="Medium" />
        <Label Text="{Binding CategoryName}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>